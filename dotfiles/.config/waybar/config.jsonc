// Waybar Configuration for Hyprland
// Features: Workspaces, clock, system monitoring, keyboard layout, wifi selector
// JSON with Comments format for better documentation
{
  "height": 32,
  "spacing": 0,
  "modules-left": ["hyprland/workspaces", "mpris"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "network",
    "hyprland/language",
    "pulseaudio",
    "cpu",
    "temperature",
    "battery",
    "clock",
    "idle_inhibitor",
    "power-profiles-daemon",
    "custom/power"
  ],

  "hyprland/workspaces": {
    "disable-scroll": false,
    "all-outputs": false,
    "format": "{name}"
  },

  "clock": {
    "format": " {:%B %d %H:%M}",
    "format-alt": " {:%Y-%m-%d}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "interval": 1
  },

  "cpu": {
    "format": "Û∞ª† {usage}%",
    "interval": 2,
    "tooltip": false
  },

  "temperature": {
    "critical-threshold": 60,
    "format": " {temperatureC}¬∞C",
    "format-critical": " {temperatureC}¬∞C !",
    "interval": 5
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": " {capacity}%",
    "format-charging": "Û∞ÇÑ {capacity}%",
    "format-plugged": "Û∞ö• {capacity}%",
    "format-full": "Û∞Åπ {capacity}%",
    "format-warning": "Û∞ÇÉ {capacity}%",
    "format-critical": "Û∞Å∫ {capacity}%",
    "interval": 30,
    "tooltip-format": "{timeTo}, {power}W"
  },

  "pulseaudio": {
    "format": "Û∞ïæ {volume}%",
    "format-muted": "Û∞ñÅ muted",
    "format-bluetooth": "Û∞ÇØ {volume}%",
    "format-bluetooth-muted": "Û∞Ç≤ muted",
    "on-click": "pavucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
    "scroll-step": 5,
    "tooltip": true,
    "tooltip-format": "Volume: {volume}%",
    "interval": 5
  },

  "network": {
    "format-wifi": "Û∞ñ© {essid} ({signalStrength}%)",
    "format-ethernet": "Û∞àÄ",
    "format-linked": "Û∞àÇ No IP",
    "format-disconnected": "Û∞ñ™ Disconnected",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
    "tooltip-format": "{ifname} via {gwaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)\n{ifname}: {ipaddr}/{cidr}",
    "tooltip-format-ethernet": "Ethernet: {ifname}\n{ipaddr}/{cidr}",
    "tooltip-format-disconnected": "Disconnected",
    "on-click": "nm-connection-editor",
    "interval": 10
  },

  "custom/power": {
    "format": "‚èª",
    "tooltip": "Sleep Computer",
    "on-click": "swaylock -f && systemctl suspend",
    "on-click-right": "hyprctl dispatch dpms off"
  },

  "hyprland/language": {
    "format": "{}",
    "format-en": "EN",
    "format-sv": "SE",
    "keyboard-name": "at-translated-set-2-keyboard"
  },

  "hyprland/window": {
    "format": "{}",
    "rewrite": {
      "(.*) ‚Äî Zen Browser": "$1",
      "(.*) - (.*) - Visual Studio (.*)": "$2",
      "(.*) - fish": "> [$1]",
      "tmux": "> [$1]"
    },
    "separate-outputs": true
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    }
  },

  "mpris": {
    "format": "üéµ {artist} - {album} - {title}",
    "format-paused": "üéµ",
    "player-icons": {
      "default": "‚ñ∂",
      "mpv": "üéµ"
    },
    "status-icons": {
      "paused": "‚è∏"
    },
    "ignored-players": [
      "firefox",
      "chromium",
      "brave",
      "librewolf",
      "qutebrowser",
      "zen",
      "zen-browser"
    ]
  },

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  }
}
