# Swayidle configuration for battery power
# Lock screen after 30 minutes, turn off display, suspend after extended idle

# Lock screen after 30 minutes of inactivity
timeout 1800 'swaylock -f'

# Turn off display 1 minute after lock
timeout 1860 'hyprctl dispatch dpms off'

# Suspend after 90 minutes total idle time on battery
timeout 5400 'systemctl suspend'

# Turn on display when activity resumes
resume 'hyprctl dispatch dpms on'

# Lock before system sleep/suspend
before-sleep 'swaylock -f'

# Ensure display is on after resume
after-resume 'hyprctl dispatch dpms on'
