# Swayidle configuration for battery power
# Lock screen and turn off display after 10 minutes, suspend after 20 minutes

# Lock screen after 10 minutes of inactivity
timeout 600 'swaylock -f'

# Turn off display 30 seconds after lock, turn back on when active
timeout 630 'hyprctl dispatch dpms off' resume 'hyprctl dispatch dpms on'

# Suspend after 20 minutes (1200 seconds) of inactivity
timeout 1200 'systemctl suspend'

# Lock before system sleep/suspend
before-sleep 'swaylock -f'

# Ensure display is on after resume
after-resume 'hyprctl dispatch dpms on'
